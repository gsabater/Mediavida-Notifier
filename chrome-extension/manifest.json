{
  "manifest_version": 2,

  "name": "Mediavida Notifier",
  "description": "Enhances the Mediavida Experience.",
  "version": "0.1",

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "assets/icon.png"
    //"default_popup": "popup.html"
    //"default_title": "Click here!"
  },

  "background": {
    "scripts": ["mv.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.mediavida.com/*"],
      "js": ["mv-front.js"]
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "notifications",

    //"https://ajax.googleapis.com/",
    "*://*.mediavida.com/*"
  ]
}