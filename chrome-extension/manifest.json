{
  "manifest_version": 2,

  "name": "Mediavida Notifier",
  "description": "Enhances the Mediavida Experience.",
  "version": "0.4",

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "modules/mvn.popup.html"
  },

  "background": {
    "scripts": ["mvn.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.mediavida.com/*"],
      "css": ["mv-front.css"],
      "js": [
        "lib/jquery-2.1.4.min.js",
        "lib/jquery.magnific-popup.min.js",
        "mv-front.js",
        "modules/mvn.module.user.js",
        "modules/mvn.module.posts.js",
        "modules/mvn.module.extras.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "settings.html",
    "/assets/*"
  ],

  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "*://*.mediavida.com/*"
  ]
}